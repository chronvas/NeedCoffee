<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/venue_container">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/venue_bestimage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/current_location" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/venue_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:width="80dp"
                android:height="80dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorVenueName"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/venue_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorVenueAddress"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/venue_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorAccentLight"
                android:textSize="14sp" />
        </LinearLayout>

        <!--<TextView-->
        <!--android:width="60dp"-->
        <!--android:height="60dp"-->
        <!--android:background="@drawable/circular_text"-->
        <!--android:text="4.4"-->
        <!--android:id="@+id/snippet24"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ellipsize="end"-->
        <!--android:maxLines="1"-->
        <!--android:textColor="#ff7f7f7f"-->
        <!--android:textSize="14sp" />-->

    </LinearLayout>

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/venue_rating_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circular_text"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="4.6"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>